{
  "name": "change",
  "homepage": "https://lukaswerfel.github.io/change/",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "10.0.10",
    "@types/jest": "24.0.9",
    "@emotion/styled": "10.0.10",
    "@types/mockdate": "2.0.0",
    "@types/react": "16.9.22",
    "@types/react-dom": "16.8.4",
    "@types/node": "11.13.4",
    "aguid": "2.0.0",
    "react": "16.8.6",
    "react-div-100vh": "0.3.2",
    "react-dom": "16.8.6",
    "react-scripts": "2.1.8",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "cypress-testing-library": "2.4.0",
    "cypress": "3.2.0",
    "eslint-plugin-cypress": "2.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "factory.ts": "0.4.5",
    "gh-pages": "2.0.1",
    "husky": "1.3.1",
    "jest-dom": "3.1.3",
    "lint-staged": "8.1.5",
    "mockdate": "2.0.2",
    "prettier": "1.17.0",
    "react-testing-library": "6.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test",
    "test:e2e": "cypress run",
    "lint": "eslint src --ext tsx --ext ts --ignore-pattern serviceWorker.ts --ignore-pattern module-declarations",
    "prettify": "prettier --parser typescript",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/serviceWorker.ts",
      "!src/setupTests.ts",
      "!src/index.tsx",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "prettier",
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run prettify -- --write",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
